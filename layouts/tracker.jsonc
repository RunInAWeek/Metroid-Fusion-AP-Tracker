                "type": "map",
                "maps": [
                  "s3"
                ]
              }
            },
            {
              "title": "Sector 4",
              "content": {
                "type": "map",
                "maps": [
                  "s4"
                ]
              }
            },
            {
              "title": "Sector 5",
              "content": {
                "type": "map",
                "maps": [
                  "s5"
                ]
              }
            },
            {
              "title": "Sector 6",
              "content": {
                "type": "map",
                "maps": [
                  "s6"
                ]
              }
            }
          ]
        },
        {
          "type": "dock",
          "dock": "right",
          "v_alignment": "stretch",
          "content": [
            {
              "type": "group",
              "dock": "bottom",
              "content": {
                "type": "layout",
                "v_alignment": "stretch",
                "key": "keys"
              }
            }
          ]
        }
      ]
    }
  },"settings_popup": {
